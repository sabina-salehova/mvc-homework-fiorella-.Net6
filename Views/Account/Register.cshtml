@model RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Majestic Admin</title>
  <!-- plugins:css -->
  <link rel="stylesheet" href="~/Admin/vendors/mdi/css/materialdesignicons.min.css">
  <link rel="stylesheet" href="~/Admin/vendors/base/vendor.bundle.base.css">
  <!-- endinject -->
  <!-- plugin css for this page -->
  <!-- End plugin css for this page -->
  <!-- inject:css -->
  <link rel="stylesheet" href="~/Admin/css/style.css">
  <!-- endinject -->
  <link rel="shortcut icon" href="~/Admin/images/favicon.png" />
</head>

<body>
  <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
              <div class="brand-logo">
                <img src="~/Admin/images/logo.svg" alt="logo">
              </div>
              <h4>New here?</h4>
              <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
              <div class="text-danger" asp-validation-summary="ModelOnly"></div>
              <form class="pt-3" method="post" asp-action="register" enctype="multipart/form-data">
                <div class="form-group">
                    <input asp-for="Fullname" class="form-control form-control-lg" placeholder="Fullname">
                    <span class="text-danger" asp-validation-for="Fullname"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Username" class="form-control form-control-lg" placeholder="Username">
                    <span class="text-danger" asp-validation-for="Username"></span>
                </div>               
                <div class="form-group">
                    <input asp-for="Email" class="form-control form-control-lg" placeholder="Email">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
                <div class="form-group">
                    <input asp-for="Password" class="form-control form-control-lg" placeholder="Password">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form-group">
                    <input asp-for="ConfirmedPassword" class="form-control form-control-lg" placeholder="ConfirmedPassword">
                    <span class="text-danger" asp-validation-for="ConfirmedPassword"></span>
                </div>
                <div class="mt-3">                                
                  <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" href="~/Admin/index.html">SIGN UP</button>
                </div>
                <div class="text-center mt-4 font-weight-light">
                  Already have an account? <a asp-action="login" class="text-primary">Login</a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <!-- container-scroller -->
  <!-- plugins:js -->
  <script src="~/Admin/vendors/base/vendor.bundle.base.js"></script>
  <!-- endinject -->
  <!-- inject:js -->
  <script src="~/Admin/js/off-canvas.js"></script>
  <script src="~/Admin/js/hoverable-collapse.js"></script>
  <script src="~/Admin/js/template.js"></script>
  <!-- endinject -->
</body>

</html>

