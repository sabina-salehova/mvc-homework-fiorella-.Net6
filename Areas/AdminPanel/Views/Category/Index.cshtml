@{
    List<Category> categories = Model;
}

<div class="row">
    <div class="col-lg-10 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Basic Table</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in categories)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@Html.Raw(@item.Description)</td>
                                    <td><a class="btn btn-primary" asp-action="details" asp-route-id="@item.Id">Details</a></td>
                                    <td><a class="btn btn-success" asp-action="update" asp-route-id="@item.Id">Update</a></td>
                                    <td><button class="btn btn-danger" id="delete-category" value="@item.Id">Delete</button></td>
                                </tr>
                            }                                     
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>